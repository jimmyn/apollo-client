{
  "version": "0.1.2",
  "license": "MIT",
  "name": "apollo-offline-hooks",
  "author": "Dmitriy Nevzorov",
  "repository": "https://github.com/jimmyn/apollo-offline-hooks",
  "description": "Apollo React Hooks with automatic cache updates",
  "keywords": [
    "apollo",
    "apollo-react",
    "apollo-react-hooks",
    "react",
    "react-hooks"
  ],
  "module": "dist/apollo-offline-hooks.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "release": "release-it"
  },
  "peerDependencies": {
    "@apollo/react-hooks": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix"
    }
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "printWidth": 100
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "yarn lint --fix",
        "CI=true yarn test"
      ]
    }
  },
  "devDependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-hooks": "^3.1.3",
    "@types/jest": "^24.0.25",
    "apollo-boost": "^0.4.7",
    "apollo-cache": "^1.3.4",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.13",
    "cross-fetch": "^3.0.4",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "husky": "^4.0.0",
    "release-it": "^12.4.3",
    "tsdx": "^0.12.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "apollo-utilities": "^1.3.3",
    "immer": "^5.1.0"
  }
}
